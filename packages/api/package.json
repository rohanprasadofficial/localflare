{
  "name": "localflare-api",
  "version": "0.2.0",
  "description": "Lightweight API server for Localflare - reads .wrangler/state directly",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "@hono/node-server": "^1.13.7",
    "better-sqlite3": "^11.7.0",
    "smol-toml": "^1.3.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "dashboard",
    "api",
    "localflare"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rohanprasadofficial/localflare",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/rohanprasadofficial/localflare#readme",
  "publishConfig": {
    "access": "public"
  }
}
